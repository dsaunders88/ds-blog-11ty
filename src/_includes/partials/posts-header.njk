<header class="relative border-b border-slate-600 pt-52 pb-20">
    <div
        class="container relative z-10 mx-auto max-w-screen-lg items-center justify-between px-4 lg:px-8"
    >
        <h1 class="mb-8 font-header text-5xl md:text-6xl font-bold">
            <span
                class="bg-gradient-to-r from-rose-500 to-rose-300 bg-clip-text text-transparent"
            >
                {{ pageHeaderTitle }}
            </span>
        </h1>
        {% if pageHeaderSummary %}
            <p class="text-2xl leading-normal max-w-3xl prose-a:text-rose-400 prose-a:underline hover:prose-a:no-underline">{{ pageHeaderSummary | safe }}</p>
        {% endif %}
    </div>
    <div class="custom-background absolute inset-0 h-full w-full"></div>
</header>
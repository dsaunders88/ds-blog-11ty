<!-- Open Graph -->
<meta property="og:site_name" content="{{ site.name }}">
<meta property="og:url" content="{{ page.url | absoluteUrl(site.url) }}">

{% if path == "home" %}
    <meta property="og:title" content="{{ site.metaTitle }}">
{% else %}
    <meta property="og:title" content="{{ title }} | {{ site.name }}">
{% endif %}

{% if seoDescription %}
    <meta property="og:description" content="{{ seoDescription }}">
{% else %}
    <meta property="og:description" content="{{ site.metaDescription }}" />
{% endif %}
<meta property="og:type" content="website">
<meta property="og:locale" content="en_US">
{% if post_image %}
    <meta property="og:image" content="{{ post_image.url }}">
    <meta property="og:image:alt" content="{{ post_image.alt }}">
{% else %}
    <meta property="og:image" content="{{ site.openGraphImage }}">
     <meta property="og:image:alt" content="{{ site.metaDescription }}">
{% endif %}

<!-- Twitter -->
<meta name="twitter:site" content="{{ site.socialHandle }}">

{% if path == "home" %}
    <meta name="twitter:title" content="{{ site.metaTitle }}">
{% else %}
    <meta name="twitter:title" content="{{ title }} | {{ site.name }}">
{% endif %}

{% if seoDescription %}
    <meta name="twitter:description" content="{{ seoDescription }}">
{% else %}
    <meta name="twitter:description" content="{{ site.metaDescription }}" />
{% endif %}
<meta name="twitter:creator" content="{{ site.socialHandle }}">
<meta name="twitter:card" content="summary">
{% if post_image %}
    <meta name="twitter:image" content="{{ post_image.url }}">
    <meta name="twitter:image:alt" content="{{ post_image.alt }}">
{% else %}
    <meta name="twitter:image" content="{{ site.openGraphImage }}">
    <meta name="twitter:image:alt" content="{{ site.metaDescription  }}">
{% endif %}